mixin ProductCard(item)
	div(class="flex-grow p-4 rounded-md shadow-lg bg-white border border-neutral-50 transition group/card hover:-translate-y-2 hover:shadow-xl")
		div(class="flex flex-col gap-4", x-data="{}")
			a(
				href=`/${item.slug}`,
				class="block rounded overflow-hidden shadow"
			)
				div(
					class="relative h-64"
				)
					if item.acf.product_images.length
						img(
							src=item.acf.product_images[0].sizes["medium_large"],
							alt=item.title.rendered,
							class="absolute top-0 left-0 w-full h-full object-cover transition group-hover/card:scale-105"
						)
					else
						img(
							src="/img/ce.png",
							alt=item.title.rendered,
							class="absolute top-0 left-0 w-full h-full object-cover transition group-hover/card:scale-105"
						)

			div(class="flex flex-col gap-4")
				div(class="flex gap-4")
					h4(class="font-medium text-lg")
						a(href=`/${item.slug}`)= item.title.rendered
					div(class="mr-auto")
					a(
						href=`/${item.slug}`,
						class="inline-flex translate-y-1 transition group-hover/card:text-cetek-600"
					)
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 256 256"><path fill="currentColor" d="M200 64v104a8 8 0 0 1-16 0V83.31L69.66 197.66a8 8 0 0 1-11.32-11.32L172.69 72H88a8 8 0 0 1 0-16h104a8 8 0 0 1 8 8"/></svg>

				if item.acf.meta_description
					p(
						class="text-neutral-400 text-sm",
						x-text=`'${item.acf.meta_description}'.length > 92 ? '${item.acf.meta_description}'.slice(0, 92) + '...' : '${item.acf.meta_description}'`
					)
