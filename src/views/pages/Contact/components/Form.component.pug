mixin SectionForm
	-
		const socialMedia =  {
			hrefFacebook: siteSettings.website_settings.social_media['facebook'],
			hrefTwitter: siteSettings.website_settings.social_media['twitter'],
			hrefInstagram: siteSettings.website_settings.social_media['instagram'],
		}

	section(class="relative -mt-40")
		div(class="container")
			div(class="px-2 sm:px-0")
				div(class="bg-white border border-neutral-200 shadow rounded-lg px-4 py-8 xs:px-8")
					div(class="flex flex-col gap-8")
						div(class="flex flex-col items-center justify-center gap-2 text-center")
							h3(class="text-3xl")!= t('pageContact.sectionForm.title')
							p(class="[&_a]:text-cetek-600 [&_a:hover]:text-cetek-800")!= t('pageContact.sectionForm.description', socialMedia)

						form
							div(class="grid grid-cols-1 gap-4 sm:grid-cols-6")
								div(class="sm:col-span-3 lg:col-span-2")
									label(
										class="relative flex items-end h-14 text-sm bg-neutral-50 border border-neutral-200 rounded cursor-text transition select-none",
										x-data="{ value: '', focus: false }",
										x-bind:class="{ 'ring-1 ring-slate-900 ring-opacity-40': focus }"
									)
										input(
											type="text",
											class="block w-full h-7 text-sm px-3 py-0 -translate-y-1 bg-transparent border-none focus:ring-0",
											x-model="value",
											@focus="focus = true",
											@blur="focus = false"
										)
										span(
											class="absolute top-1/2 left-3 pointer-eveants-none transition text-sm origin-top-left",
											x-bind:class="{ '-translate-y-5 scale-[0.8]': value !== '' || focus, '-translate-y-1/2': value === '' }"
										)= t('pageContact.sectionForm.form.fullName')
											span(class="text-red-600")  *

								div(class="sm:col-span-3 lg:col-span-2")
									label(
										class="relative flex items-end h-14 text-sm bg-neutral-50 border border-neutral-200 rounded cursor-text transition select-none",
										x-data="{ value: '', focus: false }",
										x-bind:class="{ 'ring-1 ring-slate-900 ring-opacity-40': focus }"
									)
										input(
											type="email",
											class="block w-full h-7 text-sm px-3 py-0 -translate-y-1 bg-transparent border-none focus:ring-0",
											x-model="value",
											@focus="focus = true",
											@blur="focus = false"
										)
										span(
											class="absolute top-1/2 left-3 pointer-events-none transition text-sm origin-top-left",
											x-bind:class="{ '-translate-y-5 scale-[0.8]': value !== '' || focus, '-translate-y-1/2': value === '' }"
										)= t('pageContact.sectionForm.form.eMail')
											span(class="text-red-600")  *

								div(class="sm:col-span-3 lg:col-span-2")
									label(
										class="relative flex items-end h-14 text-sm bg-neutral-50 border border-neutral-200 rounded cursor-text transition select-none",
										x-data="{ value: '', focus: false }",
										x-bind:class="{ 'ring-1 ring-slate-900 ring-opacity-40': focus }"
									)
										input(
