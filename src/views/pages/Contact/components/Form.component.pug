										class="relative flex items-end h-14 text-sm bg-neutral-50 border border-neutral-200 rounded cursor-text transition select-none",
										x-data="{ value: '', focus: false }",
										x-bind:class="{ 'ring-1 ring-slate-900 ring-opacity-40': focus }"
