								div(class="sm:col-span-6")
									label(
										class="relative flex text-sm bg-neutral-50 border border-neutral-200 rounded cursor-text transition select-none",
										x-data="{ value: '', focus: false }",
										x-bind:class="{ 'ring-1 ring-slate-900 ring-opacity-40': focus }"
									)
										textarea(
											rows="8",
											class="block w-full text-sm mt-7 px-3 py-0 bg-transparent border-none focus:ring-0",
											x-model="value",
											@focus="focus = true",
											@blur="focus = false"
